# a: rails からユーザの登録情報（ひと月分）を持ってくる
# b: カレンダーを表示するためのデータを Rails 側で生成する
# 1 と 2 を合わせた json が渡ってくる。

<% environment.context_class.instance_eval { include ApplicationHelper } %>

set_cal = ->
  days = <%= days_of_a_month %>
  $(days).each (i, day) ->
    $('#calendar').append("<p>#{day}</p>")

$ ->
  set_cal()
